	<file name="admin/controller/catalog/seopack.php">
		<operation>
			<search position="before"><![CDATA[public function cleartags() {]]></search>
			<add><![CDATA[public function clearh1s() {
	
		$query = $this->db->query("update " . DB_PREFIX . "product_description set custom_h1 = '';");
		
		$this->session->data['success'] = "Custom h1s were deleted.";
		
		$this->response->redirect($this->url->link('catalog/seopack', 'token=' . $this->session->data['token'], 'SSL'));
	
			}]]></add>
		</operation>
		<operation>
			<search position="before"><![CDATA[$data['cleartags']]]></search>
			<add><![CDATA[
			$data['clearh1s'] = $this->url->link('catalog/seopack/clearh1s', 'token=' . $this->session->data['token'], 'SSL');
			]]></add>
		</operation>
