				}			
			]]></add>
		</operation>

		<operation error="skip">
			<search position="before"><![CDATA[($url)]]></search>
			<add><![CDATA[
			$seopagination = $this->config->get('seopagination');				
			if (isset($key) && $key == 'page' && $url && (isset($seopagination['pagination']))) {
						$url .= '/page/' . $value;
						unset($data[$key]);
					}
			]]></add>
